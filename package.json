{
  "name": "crossfilterx",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build:wasm": "wasm-pack build packages/core/src/wasm/kernels --release --target web --out-dir packages/core/src/wasm/pkg",
    "build": "npm run build:wasm && npm run build --workspaces",
    "dev": "node scripts/dev-server.mjs",
    "lint": "eslint .",
    "test": "node run-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:all": "npm run test && npm run test:e2e",
    "bench": "node scripts/run-bench.mjs",
    "bench:micro": "node scripts/run-histogram-microbench.mjs",
    "bench:perf": "npm run build && node --expose-gc scripts/run-performance-bench.mjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "playwright": "^1.55.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
