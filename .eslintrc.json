{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "worker": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "tsconfig.base.json",
          "packages/*/tsconfig.json"
        ]
      }
    }
  }
}
